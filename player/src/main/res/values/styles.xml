<resources>
    <style name="PlayerTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/exo_black_opacity_60</item>
        <item name="colorPrimaryDark">@color/exo_black_opacity_60</item>
        <item name="colorAccent">@color/exo_white</item>
        <item name="android:fontFamily">@font/fs_font</item>
        <item name="fontFamily">@font/fs_font</item>
    </style>
    <style name="PlayerControlButton">
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:padding">12dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">@android:color/white</item>
    </style>
    <style name="CustomQualityButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/quality_button_selector</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>